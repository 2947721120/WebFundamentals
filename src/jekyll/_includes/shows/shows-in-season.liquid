<!-- shows in season -->

<div class="mdl-grid">
  {% for show in page.siblingPages %}
    {% if show.url != page.url%}
      {% capture text %}<b>{{show.title}}</b> {{show.description}}{% endcapture %}
      {% capture image %}{% if show.youtubeThumbnail %}{{show.youtubeThumbnail}}{% else %}https://img.youtube.com/vi/{{show.youtubeID}}/mqdefault.jpg{%endif%}{% endcapture %}
      {% include shows/card.liquid linkHref=show.relativeUrl text=text imgUrl=image  %}
    {% endif %}
  {% endfor %}
</div>
