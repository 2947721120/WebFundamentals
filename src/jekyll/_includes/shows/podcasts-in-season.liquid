<!-- podcasts in season -->

<div class="mdl-grid">
  {% for podcast in page.siblingPages reversed %}
    {% if podcast.url != page.url%}
      {% capture text %}
        <b>{{podcast.title}}</b> {{podcast.description}}
      {% endcapture %}
      {% include shows/podcast-card.liquid linkHref=podcast.relativeUrl text=text imgUrl=podcast.podcast_image_url  %}
    {% endif %}
  {% endfor %}
</div>
